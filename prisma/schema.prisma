// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Area {
  id   Int    @id @default(autoincrement())
  name String @unique

  subareas SubArea[]
}

model SubArea {
  id   Int    @id @default(autoincrement())
  name String @unique
  area Area   @relation(fields: [areaId], references: [id])

  areaId Int
  routes Route[]
}

model Route {
  id   Int    @id @default(autoincrement())
  num  String
  name String @unique
  rank String @unique

  grade       String
  isSport     Boolean
  height      Int?
  firstAscent String?
  faDate      DateTime?
  description String?
  safety      String // green | yellow | red
  note        String?
  boltIndexes String?

  subArea   SubArea @relation(fields: [subAreaId], references: [id])
  subAreaId Int

  bolts Bolt[]
}

model Bolt {
  id     Int    @id @default(autoincrement())
  model  String
  anchor String // no | left | right

  routes Route[]
  gears  Gear[]
}

model Gear {
  id        Int       @id @default(autoincrement())
  type      String
  material  String
  setupDate DateTime?

  bolt   Bolt? @relation(fields: [boltId], references: [id])
  boltId Int?
}

model Work {
  id        Int      @id @default(autoincrement())
  date      DateTime
  type      String // setup | test | remove
  condition String
  isPass    Boolean
  note      String?

  workers Worker[]
}

model Worker {
  id   Int    @id @default(autoincrement())
  name String
  role String // operator | assistant

  work   Work @relation(fields: [workId], references: [id])
  workId Int
}
